<div class="form-group col-sm-6">
    <div class="form-check">
        <input
            name="$FIELD_NAME$"
            id="$FIELD_NAME$"
            class="form-check-input"
            type="checkbox"
            value="$CHECKBOX_VALUE$"
            {{ optional($$MODEL_NAME_CAMEL$->$FIELD_NAME$) == '$CHECKBOX_VALUE$' ? 'checked' : '' }}
        />
        <label class="form-check-label" for="$FIELD_NAME$">
            $FIELD_NAME_TITLE$
        </label>
    </div>
</div>
