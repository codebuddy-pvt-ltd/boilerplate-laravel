<div class="rdo-l">
    <input
        class="form-check-input"
        type="radio"
        name="$FIELD_NAME$"
        id="$FIELD_NAME$"
        value="$VALUE$"
        {{ optional($$MODEL_NAME_CAMEL$->$FIELD_NAME$) == '$VALUE$' ? 'checked' : '' }}
    />
    <label class="form-check-label" for="$FIELD_NAME$">
        $LABEL$
    </label>
</div>
