<div class="mb-3 col-md-6">
    <div class="form-check">
        <input
            name="$FIELD_NAME$"
            id="$FIELD_NAME$"
            class="form-check-input"
            type="checkbox"
            value="1"
            {{ optional($$MODEL_NAME_CAMEL$)->$FIELD_NAME$ == '1' ? 'checked' : '' }}
        />
        <label class="form-check-label" for="$FIELD_NAME$">
            $FIELD_NAME_TITLE$
        </label>
    </div>
</div>
